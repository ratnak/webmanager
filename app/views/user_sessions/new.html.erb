   <div class="well" style="margin-left:auto;margin-right:auto;width:500px">
    <%= simple_form_for @user_session, :as => :user_session, :url => auth_login_path, :html => {:class => 'form-vertical'} do |f| %>
      <%= f.input :login, :label => 'email' %>
      <%= f.input :password, :label => 'password' %>
      <div class="form-actions">
      <%= f.button :submit, 'Sign in', :class => 'btn btn-success' %> 
      </div>
    <% end %>
    <br/>
    <%= link_to "forgot my password", new_forgot_password_path %>
   </div>
